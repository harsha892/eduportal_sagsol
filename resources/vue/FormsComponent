<template>
    <div class="app content_wrap" id="formView">
        <div v-if="formFor==='consultant' && formType==='addNew'">
            <CreateConsultant></CreateConsultant>
        </div>
        <div v-else-if="formFor==='company' && formType==='addNew'">
            <companyForm></companyForm>
        </div>
        <div v-else-if="formFor==='vendor' && formType==='addNew'">
            <vendorForm></vendorForm>
        </div>
        <p v-else>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Quas, rem cupiditate obcaecati a consequuntur praesentium. In corporis dolorem eius aut, minus cum officia qui consequuntur! Minima natus non voluptatibus reprehenderit.</p>
    </div>
</template>

<script>
import CreateConsultant from "./dashboard/consultant/consultantForm";
import companyForm from "./dashboard/company/companyForm";
import vendorForm from "./dashboard/vendor/vendorForm";
export default {
  name: "formView",
  components: {
    CreateConsultant,
    companyForm,
    vendorForm
  },
  data() {
    return {
      formFor: "",
      formType: ""
    };
  },
  watch: {
    "$route.params": function(id) {
      this.formFor = this.$route.params.formFor;
      this.formType = this.$route.params.formType;
    }
  },
  created: function() {
    this.formFor = this.$route.params.formFor;
    this.formType = this.$route.params.formType;
  },
  mounted() {
    this.formFor = this.$route.params.formFor;
    this.formType = this.$route.params.formType;
  }
};
</script>
